# Copy this file to .env and fill in your values

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./.wwebjs_auth

# MongoDB Configuration (for Render deployment - persistent session storage)
# Get connection string from MongoDB Atlas: https://www.mongodb.com/cloud/atlas
# Leave empty for local file-based storage (development)
MONGODB_URI=
MONGODB_DB_NAME=whatsapp_bot

# Gmail API Configuration (for payment verification)
# Using Gmail API instead of IMAP - more secure and reliable
# See GMAIL_API_SETUP.md for detailed setup instructions
# 
# Steps:
# 1. Go to https://console.cloud.google.com/
# 2. Create project and enable Gmail API
# 3. Create OAuth 2.0 credentials (Desktop app)
# 4. Download credentials.json to project root
# 5. Run npm start to authorize (or npm run test-email)
GMAIL_CREDENTIALS_PATH=./credentials.json
GMAIL_TOKEN_PATH=./token.json

# SMS Activate API
# Get your API key from https://sms-activate.org
SMS_ACTIVATE_API_KEY=your-sms-activate-api-key-here
SMS_ACTIVATE_COUNTRY=0
SMS_ACTIVATE_SERVICE=wa
# Operator filter (optional) - for Malaysia Hotlink use: hotlink
# Other Malaysia operators: maxis, celcom, digi, umobile
# Leave empty for any operator
SMS_ACTIVATE_OPERATOR=

# Bot Configuration
PAYMENT_IMAGE_PATH=./payment-image.jpg
GUIDE_MESSAGE=Welcome! To proceed, please follow these steps:\n1. Type START to begin\n2. Make payment using the provided image\n3. Enter your full name as shown in payment\n4. Receive your activation code

# Email Monitoring
# Email address that sends payment confirmation emails
PAYMENT_EMAIL_SENDER=payment@example.com
CHECK_EMAIL_INTERVAL=1000

# Server Configuration (for Render)
PORT=3000

